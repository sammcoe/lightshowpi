#!/bin/bash

base="/var/log/api"

if [ ! -d ${base} ]; then
    sudo mkdir ${base};
fi

sudo touch ${base}/commands.log
sudo touch ${base}/access.log
sudo touch ${base}/error.log

sudo chmod -R a+w ${base}
sudo chown -R pi ${base}/*.log

sudo python /home/pi/api/api_server.py 1>${base}/access.log 2>${base}/error.log &
